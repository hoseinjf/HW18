@using CW17.Models.Entity
@model Category;

<form method="post" asp-controller="Category" asp-action="UpdateCategory">
    <div class="modal-body">
        <input class="form-control" name="id" type="hidden" data-sb-validations="required" value="@Model.Id" />
        <label id="name" name="name">
            نام دسته بندی
        </label>
        <input class="form-control" type="text" id="name" data-sb-validations="required" name="name"  value="@Model.CategoryName" />
        <br />
        <br />
        <label id="description" name="description">
            توضیحات
        </label>
        <input class="form-control" type="text" data-sb-validations="required" id="description" name="description"  value="@Model.Description" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>

    </div>
</form>
