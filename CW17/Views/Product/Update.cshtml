@using CW17.Models.Entity

@model Product;
<form method="post" asp-controller="Product" asp-action="UpdateProduct">
    <div class="modal-body">
        <input class="form-control" name="id" type="hidden" data-sb-validations="required" value="@Model.Id" />
        <label id="name" name="name">
            نام محصول
        </label>
        <input class="form-control" type="text" id="name" data-sb-validations="required" name="name" value="@Model.ProductName" />
        <br />
        <br />


        <label id="pric" name="pric">
            قیمت
        </label>
        <input class="form-control" type="text" id="pric" data-sb-validations="required" name="pric" value="@Model.Pric" />
        <br />
        <br />


        <label id="description" name="description">
            توضیحات
        </label>
        <input class="form-control" type="text" data-sb-validations="required" id="description" name="description" value="@Model.Description" />


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>

    </div>
</form>